<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:id="@+id/storeDetailsCL"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/storeImgIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="4sp" />

    <TextView
        android:id="@+id/storeNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/storeImgIV"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/storeAddressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/storeImgIV"
        app:layout_constraintTop_toBottomOf="@+id/storeNameTV"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/storeTimingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/storeImgIV"
        app:layout_constraintTop_toBottomOf="@+id/storeAddressTV"
        android:layout_marginTop="30dp"/>

</android.support.constraint.ConstraintLayout>